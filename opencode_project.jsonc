// NOTE: 変更を加えたい場合、これを編集するのではなく opencode.json でオーバーライド可能
{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": "notify",
  /*******************************************************************************************************************
   * Providers
   * [Providers | OpenCode](https://opencode.ai/docs/providers/)
   *******************************************************************************************************************/
  "provider": {
    // Antigravity
    // https://github.com/NoeFabris/opencode-antigravity-auth?tab=readme-ov-file#models
    "google": {
      "models": {
        "antigravity-gemini-3-pro": {
          "name": "Gemini 3 Pro (Antigravity)",
          "limit": {
            "context": 1048576,
            "output": 65535
          },
          "modalities": {
            "input": [
              "text",
              "image",
              "pdf"
            ],
            "output": [
              "text"
            ]
          },
          "variants": {
            "low": {
              "thinkingLevel": "low"
            },
            "high": {
              "thinkingLevel": "high"
            }
          }
        },
        "antigravity-gemini-3-flash": {
          "name": "Gemini 3 Flash (Antigravity)",
          "limit": {
            "context": 1048576,
            "output": 65536
          },
          "modalities": {
            "input": [
              "text",
              "image",
              "pdf"
            ],
            "output": [
              "text"
            ]
          },
          "variants": {
            "minimal": {
              "thinkingLevel": "minimal"
            },
            "low": {
              "thinkingLevel": "low"
            },
            "medium": {
              "thinkingLevel": "medium"
            },
            "high": {
              "thinkingLevel": "high"
            }
          }
        },
        "antigravity-claude-sonnet-4-5": {
          "name": "Claude Sonnet 4.5 (Antigravity)",
          "limit": {
            "context": 200000,
            "output": 64000
          },
          "modalities": {
            "input": [
              "text",
              "image",
              "pdf"
            ],
            "output": [
              "text"
            ]
          }
        },
        "antigravity-claude-sonnet-4-5-thinking": {
          "name": "Claude Sonnet 4.5 Thinking (Antigravity)",
          "limit": {
            "context": 200000,
            "output": 64000
          },
          "modalities": {
            "input": [
              "text",
              "image",
              "pdf"
            ],
            "output": [
              "text"
            ]
          },
          "variants": {
            "low": {
              "thinkingConfig": {
                "thinkingBudget": 8192
              }
            },
            "max": {
              "thinkingConfig": {
                "thinkingBudget": 32768
              }
            }
          }
        },
        "antigravity-claude-opus-4-5-thinking": {
          "name": "Claude Opus 4.5 Thinking (Antigravity)",
          "limit": {
            "context": 200000,
            "output": 64000
          },
          "modalities": {
            "input": [
              "text",
              "image",
              "pdf"
            ],
            "output": [
              "text"
            ]
          },
          "variants": {
            "low": {
              "thinkingConfig": {
                "thinkingBudget": 8192
              }
            },
            "max": {
              "thinkingConfig": {
                "thinkingBudget": 32768
              }
            }
          }
        },
        "gemini-2.5-flash": {
          "name": "Gemini 2.5 Flash (Gemini CLI)",
          "limit": {
            "context": 1048576,
            "output": 65536
          },
          "modalities": {
            "input": [
              "text",
              "image",
              "pdf"
            ],
            "output": [
              "text"
            ]
          }
        },
        "gemini-2.5-pro": {
          "name": "Gemini 2.5 Pro (Gemini CLI)",
          "limit": {
            "context": 1048576,
            "output": 65536
          },
          "modalities": {
            "input": [
              "text",
              "image",
              "pdf"
            ],
            "output": [
              "text"
            ]
          }
        },
        "gemini-3-flash-preview": {
          "name": "Gemini 3 Flash Preview (Gemini CLI)",
          "limit": {
            "context": 1048576,
            "output": 65536
          },
          "modalities": {
            "input": [
              "text",
              "image",
              "pdf"
            ],
            "output": [
              "text"
            ]
          }
        },
        "gemini-3-pro-preview": {
          "name": "Gemini 3 Pro Preview (Gemini CLI)",
          "limit": {
            "context": 1048576,
            "output": 65535
          },
          "modalities": {
            "input": [
              "text",
              "image",
              "pdf"
            ],
            "output": [
              "text"
            ]
          }
        }
      }
    },
  },
  /*******************************************************************************************************************
   * Models
   * [Config | opencode](https://opencode.ai/docs/config/#models)
   *******************************************************************************************************************/
  // "model": "google/antigravity-claude-sonnet-4-5",
  // "model": "google/gemini-3-pro-preview",
  // "model": "openrouter/glm-4.7",
  // "model": "zen/glm-4.7",
  "model": "google/antigravity-gemini-3-flash", // Google 系のデフォルトモデルはこれじゃないと Antigravity 経由で安定して動かないっぽい？
  // "model": "github-copilot/claude-sonnet-4.5",
  // "model": "github-copilot/claude-opus-4.5",
  // "model": "github-copilot/claude-haiku-4.5",
  // "model": "github-copilot/gpt-5.2",
  // "model": "github-copilot/gpt-5.1",
  // "model": "github-copilot/gpt-5.1-mini",
  /*******************************************************************************************************************
   * Agents
   * [Agents | opencode](https://opencode.ai/docs/agents/)
   *******************************************************************************************************************/
  "agent": {
    "plan": {
      // デフォルトの Plan エージェントのモデルをオーバーライド
      "model": "google/antigravity-gemini-3-flash",
      // "model": "openrouter/glm-4.7",
    },
    "general": {
      // デフォルトの General サブエージェントのモデルをオーバーライド
      // "model": "google/antigravity-claude-sonnet-4-5",
      // "model": "google/gemini-3-pro-preview",
      // "model": "openrouter/glm-4.7",
      // "model": "zen/glm-4.7",
      "model": "google/antigravity-gemini-3-pro",
    },
    "explore": {
      // デフォルトの Explore サブエージェントのモデルをオーバーライド
      // "model": "google/antigravity-claude-sonnet-4-5",
      // "model": "google/gemini-2.5-pro",
      // "model": "openrouter/glm-4.7",
      // "model": "zen/glm-4.7",
      "model": "google/antigravity-gemini-3-pro",
    },
    /*******************************************
     * Primary エージェント：スキル作成担当
     *******************************************/
    "skill-creator": {
      "description": "Creates and maintains project skills",
      "mode": "primary",
      "model": "google/antigravity-gemini-3-pro",
      "prompt": "You are a skill creator agent. Focus on modular, reusable, and well-documented skills.",
      "tools": {
        "skill-creator": true,
        "write": true,
        "edit": true,
      },
    },
    /*******************************************
     * サブエージェント：コードレビュー担当
     *******************************************/
    "code-reviewer": {
      "description": "Reviews code for best practices and potential issues",
      "mode": "subagent",
      // "model": "google/antigravity-claude-sonnet-4-5",
      // "model": "google/antigravity-gemini-3-pro",
      // "model": "google/gemini-3-pro-preview",
      // "model": "openrouter/glm-4.7",
      // "model": "zen/glm-4.7",
      "model": "google/antigravity-gemini-3-pro",
      "prompt": "You are a code reviewer. Focus on security, performance, and maintainability.",
      "tools": {
        "write": false,
        "edit": false,
      },
    },
    /*******************************************
     * サブエージェント：kintone 操作用
     *******************************************/
    "kintone-agent": {
      "description": "Kintone 操作用",
      "mode": "subagent",
      "model": "google/antigravity-gemini-3-pro",
      "prompt": "You are a kintone assistant. Use minimal privileges. Only call kintone MCP when necessary.",
      "tools": {
        "kintone": true,
        "write": true,
        "edit": true,
      },
    },
    /*******************************************
     * サブエージェント：推論用
     *******************************************/
    "deep-thinker": {
      "mode": "subagent",
      "description": "Agent that uses high reasoning effort for complex problems",
      // "model": "google/google/antigravity-gemini-3-pro",
      "model": "google/antigravity-claude-sonnet-4-5-thinking",
      // "model": "openrouter/glm-4.7",
      "variant": "low",
    },
    /*******************************************
     * サブエージェント：最高の実装担当
     *******************************************/
    "super-coder": {
      "mode": "subagent",
      "description": "Agent specialized in writing complex code solutions",
      "model": "google/antigravity-claude-opus-4-5",
      // "model": "openrouter/glm-4.7",
      "prompt": "You are a super coder. You must NOT perform large refactors or multi-file edits unless explicitly instructed. Prefer minimal diffs.",
      "tools": {
        "write": true,
        "edit": true,
      },
    },
  },
  /*******************************************************************************************************************
   * Permissions
   * [Permissions | opencode](https://opencode.ai/docs/permissions/)
   *******************************************************************************************************************/
  "permission": {
    // ファイルの読み取り（ファイルパスと一致）
    "read": {
      "*": "allow",
      "*.env": "deny",
      "*.env.*": "deny",
      "*.env.*example": "allow",
      "*.env.*template": "allow",
      "*ppk": "deny",
    },
    // スキルの読み込み（スキル名と一致）
    "skill": {
      "*": "ask",
      "skill-creator": "allow",
    },
    // すべてのファイルの変更（edit、、、writeをpatchカバーmultiedit）
    "edit": "allow",
    // ファイルのグロブ（グロブパターンに一致）
    "glob": "allow",
    // コンテンツ検索（正規表現パターンに一致）
    "grep": "allow",
    // ディレクトリ内のファイルを一覧表示する（ディレクトリパスと一致）
    "list": "allow",
    // サブエージェントの起動（サブエージェントの種類に一致）
    "task": "allow",
    // LSPクエリの実行（現在は非粒度）
    "lsp": "allow",
    // ToDoリストの読み取り/更新
    "todoread": "allow",
    "todowrite": "allow",
    // URL の取得 (URL と一致)
    "webfetch": "allow",
    // ウェブ/コード検索（クエリに一致）
    "websearch": "allow",
    "codesearch": "allow",
    // ツールがプロジェクトの作業ディレクトリ外のパスにアクセスしたときにトリガーされます
    "external_directory": "ask",
    // 同じツール呼び出しが同一の入力で3回繰り返されるとトリガーされます
    "doom_loop": "allow",
    // シェルコマンドを実行する（解析されたコマンドに一致git status --porcelain）
    "bash": {
      // Git
      "*": "ask",
      "git checkout *": "ask",
      "git commit *": "ask",
      "git pull *": "ask",
      "git branch *": "allow",
      "git fetch *": "allow",
      "git log *": "allow",
      "git diff *": "allow",
      "git show *": "allow",
      "git status *": "allow",
      "git cherry-pick *": "deny",
      "git merge *": "deny",
      "git mv *": "deny",
      "git rebase *": "deny",
      "git reset *": "deny",
      "git push *": "deny",
      "git stash *": "deny",
      "git tag *": "deny",
      // bun / uv
      "bun install": "ask",
      "bun run build": "allow",
      "bun run test": "allow",
      "uv add": "ask",
      "uv run pytest": "allow",
      // Other
      "ls *": "allow",
      "pwd *": "allow",
      "grep *": "allow",
    },
  },
  /*******************************************************************************************************************
   * Model Context Protocol (MCP) Servers
   * [MCP servers | opencode](https://opencode.ai/docs/mcp-servers/)
   *******************************************************************************************************************/
  "mcp": {
    /*******************************************
     * Context7
     * [upstash/context7: Context7 MCP Server -- Up-to-date code documentation for LLMs and AI code editors](https://github.com/upstash/context7?tab=readme-ov-file)
     *
     * - CONTEXT7_API_KEY
     *******************************************/
    "context7": {
      "enabled": true,
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp",
        "--api-key",
        "{env:CONTEXT7_API_KEY}",
      ],
    },
    /*******************************************
     * Serena
     * [oraios/serena: A powerful coding agent toolkit providing semantic retrieval and editing capabilities (MCP server & other integrations)](https://github.com/oraios/serena)
     *******************************************/
    "serena": {
      "enabled": true,
      "type": "local",
      "command": [
        "uvx",
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "ide-assistant",
        "--project",
        "{cwd}",
      ],
      "environment": {
        "PYTHONUNBUFFERED": "1",
      },
    },
    /*******************************************
     * filesystem
     *******************************************/
    "filesystem": {
      "enabled": true,
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "./"
      ],
    },
    /*******************************************
     * Kintone
     * [kintone/mcp-server: kintone official MCP server](https://github.com/kintone/mcp-server)
     *******************************************/
    "kintone": {
      "enabled": true,
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@kintone/mcp-server",
        "--base-url",
        "{env:KINTONE_BASE_URL}",
        "--username",
        "{env:KINTONE_USERNAME}",
        "--password",
        "{env:KINTONE_PASSWORD}",
      ],
    },
    /*******************************************
     * Chrome DevTools
     * [ChromeDevTools/chrome-devtools-mcp: Chrome DevTools for coding agents](https://github.com/ChromeDevTools/chrome-devtools-mcp)
     *
     * require to serve chromium
     *******************************************/
    "chrome-devtools": {
      "enabled": true,
      "type": "local",
      "command": [
        "npx",
        "-y",
        "chrome-devtools-mcp@latest",
        "--browser-url=http://127.0.0.1:9222",
      ],
    },
    /*******************************************
     * Spec Workflow MCP
     * [Pimzino/spec-workflow-mcp: A Model Context Protocol (MCP) server that provides structured spec-driven development workflow tools for AI-assisted software development, featuring a real-time web dashboard and VSCode extension for monitoring and managing your project's progress directly in your development environment.](https://github.com/Pimzino/spec-workflow-mcp)
     *******************************************/
    "spec-workflow": {
      "enabled": true,
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@pimzino/spec-workflow-mcp@latest",
        "./"
      ],
    },
  },
  /*******************************************************************************************************************
   * Formatter
   * [Formatters | OpenCode](https://opencode.ai/docs/formatters/)
   *******************************************************************************************************************/
  "formatter": {
    "markdownlint": {
      "command": [
        "npx",
        "markdownlint-cli2",
        "--fix",
        "$FILE"
      ],
      "extensions": [
        ".md"
      ],
    },
  },
  /*******************************************************************************************************************
   * Plugins
   * [Plugins | opencode](https://opencode.ai/docs/plugins/)
   * [Ecosystem | OpenCode](https://opencode.ai/docs/ecosystem/)
   *******************************************************************************************************************/
  "plugin": [
    /*******************************************
     * opencode-ignore
     * https://github.com/lgladysz/opencode-ignore
     *******************************************/
    "opencode-ignore",
    /*******************************************
     * Antigravity + Gemini CLI OAuth Plugin for Opencode
     * https://github.com/NoeFabris/opencode-antigravity-auth
     *******************************************/
    // "opencode-antigravity-auth@latest"
    "opencode-antigravity-auth@beta",
  ],
}